<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Configuración</title>
    <%- include('head'); %>
  </head>
  <body>
    <br />
    <% let entrenadores = trainers.trainers %>
    <div class="container mx-auto">
      <div class="">
        <h3 class="text-center">Pantalla de configuración</h3>
      </div>
      <form method="GET" class="" action="/result" id="formulario" name="formulario">
        <% for (const datos of entrenadores) { %>
        <div class="">
          <div class="mb-3 col-md-4">
            <div class="row">
              <label for="name" class="col-sm-2 col-form-label">Nombre</label>
              <div class="col-md-9">
                <input type="text" id="name-<%- datos.id %>" class="form-control" aria-describedby="name" value="<%- datos.name %>" />
              </div>
            </div>
          </div>
          <div class="mb-3 col-md-4">
            <div class="row">
              <label for="val" class="col-sm-2 col-form-label">Valoración</label>
              <div class="col-md-9">
                <input
                  type="number"
                  id="val-<%- datos.id %>"
                  class="form-control mx-sm-3 input-size"
                  aria-describedby="val"
                  value="<%- datos.reputation %>"
                />
              </div>
            </div>
          </div>
          <div class="mb-3 col-md-4">
            <div class="row">
              <label for="maxCli" class="col-sm-2 col-form-label">Máximo número de clientes</label>
              <div class="col-md-9">
                <input
                  type="number"
                  id="maxCli-<%- datos.id %>"
                  class="form-control mx-sm-3"
                  aria-describedby="maxCli"
                  value="<%- datos.available %>"
                />
              </div>
            </div>
          </div>
        </div>
        <hr />
        <% } %>
        <button name="submit" type="submit" class="btn btn-default">Consultar</button>
      </form>
    </div>
  </body>
</html>
