<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Configuración</title>
    <%- include('head'); %>
  </head>
  <body>
    <br />
    <% let entrenadores = trainers.trainers %>
    <div class="mx-auto conf-container">
      <div class="">
        <h3 class="text-center">Pantalla de configuración</h3>
      </div>
      <form method="POST" class="" action="/result" id="formulario" name="formulario">
        <% for (const datos of entrenadores) { %>
        <div class="row mb-2">
          <h5>Entrenador</h5>
        </div>

        <div class="row mb-3 g-3 mx-auto">
          <div class="col-lg-2 col-md-2">
            <label for="name" class="col-form-label">Nombre</label>
          </div>
          <div class="col-lg-2 col-md-2">
            <input
              type="text"
              id="name-<%- datos.id %>"
              name="name-<%- datos.id %>"
              class="form-control"
              aria-describedby="name"
              value="<%- datos.name %>"
            />
          </div>

          <div class="col-lg-2 col-md-2">
            <label for="val" class="col-form-label">Valoración</label>
          </div>
          <div class="col-lg-2 col-md-2">
            <input
              type="number"
              step="0.1"
              lang="es"
              id="val-<%- datos.id %>"
              name="val-<%- datos.id %>"
              class="form-control"
              value="<%- datos.reputation %>"
              min="0.0"
              max="5.0"
            />
          </div>
          <div class="col-lg-2 col-md-2">
            <label for="maxCli" class="col-form-label">Máximo número de clientes</label>
          </div>
          <div class="col-lg-2 col-md-2">
            <input
              type="number"
              id="maxCli-<%- datos.id %>"
              name="maxCli-<%- datos.id %>"
              class="form-control"
              aria-describedby="maxCli"
              value="<%- datos.available %>"
              min="0"
            />
          </div>
        </div>
        <hr />
        <% } %>
        <div class="float-end">
          <button type="button" class="btn btn-outline-dark me-3" data-bs-toggle="modal" data-bs-target="#exampleModal">Ver tabla de clientes</button>
          <button type="submit" class="btn btn-primary">Calcular resultados</button>
        </div>
      </form>
      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Clientes</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <table class="table">
                <thead>
                  <th>Nombre</th>
                  <th>Reputacion Entrenador</th>
                </thead>
                <tbody>
                  <% for(let cliente of clients.clients) { %>
                  <tr>
                    <td><%- cliente.name %></td>
                    <td><%- cliente.trainerRep %></td>
                  </tr>

                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

